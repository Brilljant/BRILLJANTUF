<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BRILLJANT</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: black;
            color: white;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        header {
            background-color: black;
            padding: 20px;
            border-bottom: 2px solid gray;
            position: relative;
        }

        h1 {
            margin: 0;
            font-size: 50px;
            color: white;
        }

        .cart-icon {
            position: absolute;
            top: 20px;
            right: 20px;
            color: white;
            cursor: pointer;
            font-size: 30px;
        }

        .cart-dropdown {
            display: none;
            position: absolute;
            top: 50px;
            right: 20px;
            background-color: black;
            border: 2px solid gray;
            padding: 10px;
            width: 250px;
            z-index: 1;
        }

        .cart-items {
            list-style: none;
            padding: 0;
        }

        .cart-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .cart-item img {
            width: 30px;
            height: 30px;
            margin-right: 10px;
        }

        .cart-button {
            background-color: transparent;
            color: white;
            border: 2px solid white;
            padding: 5px 10px;
            cursor: pointer;
            border-radius: 5px;
            width: 100%;
            margin-top: 10px;
        }

        .total-price {
            font-weight: bold;
        }

        .buttons {
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }

        .about-button, .terms-button, .gallery-button {
            background-color: transparent;
            color: white;
            border: 2px solid white;
            border-radius: 5px;
            padding: 5px 15px;
            font-weight: bold;
            font-size: 14px;
            margin: 0 5px;
            transition: background-color 0.3s;
        }

        .about-button:hover, .terms-button:hover, .gallery-button:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
            position: relative;
        }

        .product-image {
            max-width: 100%;
            height: auto;
            display: none;
            margin: 0 auto;
        }

        .active {
            display: block;
        }

        .arrow {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(255, 255, 255, 0.5);
            border: none;
            cursor: pointer;
            font-size: 30px;
            color: black;
            padding: 10px;
            border-radius: 5px;
        }

        .arrow-left {
            left: 10px;
        }

        .arrow-right {
            right: 10px;
        }

        .dots {
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }

        .dot {
            height: 10px;
            width: 10px;
            margin: 0 5px;
            border-radius: 50%;
            background-color: gray;
            cursor: pointer;
        }

        .active-dot {
            background-color: white;
        }

        footer {
            text-align: center;
            padding: 10px;
            border-top: 2px solid gray;
            margin-top: 20px;
        }

        .buy-button {
            display: inline-block;
            margin-top: 20px;
            padding: 15px 30px;
            background-color: transparent;
            color: white;
            border: 2px solid white;
            border-radius: 5px;
            cursor: pointer;
        }

        .buy-button:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .product-name {
            font-weight: bold;
            font-size: 24px;
            margin: 20px 0;
        }

        .price {
            font-weight: bold;
            font-size: 30px;
            margin: 5px 0;
        }

        .free-shipping {
            font-size: 12px;
            margin: 0;
        }

        .admin-dot {
            position: relative;
            display: inline-block;
            height: 8px;
            width: 8px;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.1);
            cursor: pointer;
            margin-left: 10px;
            z-index: 1000;
            border: none;
        }

        .admin-dot:hover {
            background-color: rgba(255, 255, 255, 0.3);
        }
		.cart-count {
    position: absolute;
    top: -5px; /* Justera detta v√§rde f√∂r att flytta indikatorn upp eller ner */
    right: -10px; /* Justera detta v√§rde f√∂r att flytta indikatorn v√§nster eller h√∂ger */
    background-color: blue;
    color: white;
    border-radius: 50%;
    padding: 2px 6px;
    font-size: 12px;
    font-weight: bold;
}

    </style>
</head>
<body>

    <header>
        <h1><a href="index.html" style="text-decoration: none; color: white;">BRILLJANT</a></h1>
        <div class="buttons">
            <a href="about.html" class="about-button">About Us</a>
            <a href="terms.html" class="terms-button">K√∂pvillkor</a>
            <a href="gallery.html" class="gallery-button">Galleri</a>
        </div>
        <div class="cart-icon" onclick="toggleCartDropdown()">
    üõí
    <span class="cart-count" id="cart-count">0</span>
</div>

        <div class="cart-dropdown">
            <ul class="cart-items"></ul>
            <p>Total: <span class="total-price">0 kr</span></p>
            <button class="cart-button" onclick="checkout()">Checkout</button>
        </div>
    </header>

    <div class="container">
        <img src="sportbrillor.png" alt="Sport Sunglasses" class="product-image active">
        <img src="glas√∂gon.png" alt="Glasses" class="product-image">

        <button class="arrow arrow-left" id="prev">&#10094;</button>
        <button class="arrow arrow-right" id="next">&#10095;</button>

        <div class="dots">
            <div class="dot active-dot" onclick="currentSlide(0)"></div>
            <div class="dot" onclick="currentSlide(1)"></div>
        </div>

        <div class="product-name">BRILLOR .01</div>
        <div class="price">349 kr</div>
        <p class="free-shipping">Free shipping!</p>

        <button class="buy-button" onclick="addToCart('BRILLOR .01', 349, 'sportbrillor.png')">L√§gg i kundkorgen</button>
    </div> id="cartCount" style="color: white; font-size: 20px; position: absolute; top: 20px; right: 20px;">
    Products in Cart: <span id="productCount">0</span>
</div>


    <footer>
        <p>&copy; 2024 BRILLJANT. All rights reserved. contactbrilljant@gmail.com
            <div class="admin-dot" onclick="window.location.href='user-list.html'"></div>
        </p>
    </footer>

    <script>
    let cart = JSON.parse(localStorage.getItem('cart')) || [];

function addToCart(productName, price) {
    let item = cart.find(item => item.name === productName);
    if (item) {
        item.quantity++;
    } else {
        cart.push({ name: productName, price: price, quantity: 1 });
    }
    updateCart();
}

function updateCart() {
    const cartItemsContainer = document.querySelector('.cart-items');
    const totalPriceContainer = document.querySelector('.total-price');
    const cartCountContainer = document.getElementById('cart-count'); // H√§mta indikatorn
    cartItemsContainer.innerHTML = '';

    let totalPrice = 0;
    let totalCount = 0; // Variabel f√∂r att h√•lla reda p√• total antal produkter

    cart.forEach(item => {
        const itemElement = document.createElement('li');
        itemElement.textContent = `${item.name} - ${item.quantity} st - ${item.price * item.quantity} kr`;
        const removeButton = document.createElement('button');
        removeButton.textContent = 'Ta bort';
        removeButton.onclick = () => removeFromCart(item.name);
        itemElement.appendChild(removeButton);
        cartItemsContainer.appendChild(itemElement);

        totalPrice += item.price * item.quantity;
        totalCount += item.quantity; // L√§gg till antalet produkter
    });

    totalPriceContainer.textContent = `${totalPrice} kr`;
    cartCountContainer.textContent = totalCount; // Uppdatera indikatorn med det totala antalet
    localStorage.setItem('cart', JSON.stringify(cart));
}

function removeFromCart(productName) {
    const item = cart.find(item => item.name === productName);
    if (item) {
        if (item.quantity > 1) {
            item.quantity--;
        } else {
            cart = cart.filter(item => item.name !== productName);
        }
    }
    updateCart();
}


   function checkout() {
    if (cart.length === 0) {
        alert("Din kundvagn √§r tom! L√§gg till produkter innan du g√•r till kassan.");
    } else {
        // Navigera till checkout.html
        window.location.href = 'checkout.html';
    }
}


    function toggleCartDropdown() {
        const dropdown = document.querySelector('.cart-dropdown');
        dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
    }

    window.onload = updateCart;

    // Slide image functionality
    const images = document.querySelectorAll('.product-image');
    function currentSlide(n) {
        images.forEach((img, index) => {
            img.classList.remove('active');
            if (index === n) {
                img.classList.add('active');
            }
        });
    }

    document.getElementById('prev').onclick = () => {
        const currentIndex = Array.from(images).findIndex(img => img.classList.contains('active'));
        const newIndex = (currentIndex - 1 + images.length) % images.length;
        currentSlide(newIndex);
    };

    document.getElementById('next').onclick = () => {
        const currentIndex = Array.from(images).findIndex(img => img.classList.contains('active'));
        const newIndex = (currentIndex + 1) % images.length;
        currentSlide(newIndex);
    };
    </script>

</body>
</html>
